{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environment": {
      "type": "string",
      "allowedValues": ["dev", "test"],
      "defaultValue": "dev",
      "metadata": {
        "description": "Environment name"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "eastus",
      "metadata": {
        "description": "Azure region"
      }
    },
    "sqlAdministratorLogin": {
      "type": "string",
      "metadata": {
        "description": "SQL admin username"
      }
    },
    "sqlAdministratorLoginPassword": {
      "type": "securestring",
      "metadata": {
        "description": "SQL admin password"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Sql/servers",
      "apiVersion": "2022-02-01-preview",
      "name": "[concat('sql-', parameters('environment'))]",
      "location": "[parameters('location')]",
      "properties": {
        "administratorLogin": "[parameters('sqlAdministratorLogin')]",
        "administratorLoginPassword": "[parameters('sqlAdministratorLoginPassword')]"
      }
    },
    {
      "type": "Microsoft.Sql/servers/databases",
      "apiVersion": "2022-02-01-preview",
      "name": "[concat('sql-', parameters('environment'), '/appdb')]",
      "location": "[parameters('location')]",
      "dependsOn": ["[concat('Microsoft.Sql/servers/', concat('sql-', parameters('environment')))]"],
      "sku": {
        "name": "Basic"
      }
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2022-09-01",
      "name": "[concat('asp-', parameters('environment'))]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "F1",
        "tier": "Free"
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-09-01",
      "name": "[concat('api-', parameters('environment'))]",
      "location": "[parameters('location')]",
      "dependsOn": ["[concat('Microsoft.Web/serverfarms/', concat('asp-', parameters('environment')))]"],
      "properties": {
        "serverFarmId": "[concat('asp-', parameters('environment'))]"
      }
    },
    {
      "type": "Microsoft.Web/staticSites",
      "apiVersion": "2022-09-01",
      "name": "[concat('app-', parameters('environment'))]",
      "location": "[parameters('location')]"
    }
  ]
}
